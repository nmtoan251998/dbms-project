extends ../layout/common

block main
    link(rel="stylesheet", href="/styles/major-data.css", type="text/css")
    .table-data
        .table-search
            form(action='')
            input.search-input(type='text', name='search-name', placeholder='Input major name here...')
            button.search-button Search
        table.table
            thead.thead
                tr
                    th#sort-id(title='Identification') 
                        | Id 
                        i.fas.fa-sort
                    th#sort-falculty-id(title='Falculty Identification')
                        | Faculty Id 
                        i.fas.fa-sort
                    th#sort-name(title='Name')
                        | Major name 
                        i.fas.fa-sort
                    th#functions(title='Functions')
                        | Functions                         
            tbody.tbody
                each ChildMajor in listMajor
                    tr.tb-data
                        td(title='') #{ChildMajor.Id}
                        td(title='') #{ChildMajor.FalId}
                        td(title='') #{ChildMajor.MajorName}
                        td.function(title='')
                            a(href="/major/data-delete/"+ChildMajor.Id)
                                i.id-fal.fas.fa-trash-alt
                            a(href="")
                                i.fas.fa-pencil-alt(id='')
                            a(href="")
                                i.fas.fa-eye(id='')
                caption(title='CTU Majors') Table name: Cantho univerysity's majors
        //- Paginating  
        .paginator                                  
            - var pageIndex = 1
            if(page === 1)                                
                a.pagination(href=`/major/data?page=${page}&size=${item}` style="margin-right: .5rem")
                    i#previous.fas.fa-arrow-alt-circle-left
            else
                a.pagination(href=`/major/data?page=${page-1}&size=${item}` style="margin-right: .5rem")
                    i#previous.fas.fa-arrow-alt-circle-left
            .number                                 
                - for(var i = 0; i < 5; i++, pageIndex++)                    
                    if(page === pageIndex)
                        a.activating.page-index(href=`/major/data?page=${pageIndex}&size=${item}`)= pageIndex
                    else
                        a.page-index(href=`/major/data?page=${pageIndex}&size=${item}`)= pageIndex
            a(href=`/major/data?page=${page+1}&size=${item}`).pagination
                i#previous.fas.fa-arrow-alt-circle-right
            .total-item
                label(for='total-item') Total majors:
                input#total-item(type='button', value='')
    link(rel="preload" as="style" onload="this.rel='stylesheet'"  integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" crossorigin="anonymous")    
