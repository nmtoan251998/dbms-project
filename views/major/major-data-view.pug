extends ../layout/common

block main
    link(rel="stylesheet", href="/styles/major-data.css", type="text/css")
    .table-data
        .table-search
            form(action='')
            input.search-input(type='text', name='search-name', placeholder='Input major name here...')
            button.search-button Search
        table.table
            thead.thead
                tr
                    th#sort-id(title='Identification') 
                        | Id 
                        i.fas.fa-sort
                    th#sort-falculty-id(title='Falculty Identification')
                        | Faculty Id 
                        i.fas.fa-sort
                    th#sort-name(title='Name')
                        | Major name 
                        i.fas.fa-sort
                    th#functions(title='Functions')
                        | Functions                         
            tbody.tbody
                tr.tb-data
                    td(title='') Unknown Id 1
                    td(title='') Unknown Name
                    td(title='') Unknown Dean
                    td.function(title='')
                        a(href="#")
                            i.fas.fa-trash-alt(id='')
                        a(href="#")
                            i.fas.fa-pencil-alt(id='')
                        a(href="#")
                            i.fas.fa-eye(id='')
                tr.tb-data
                    td(title='') Unknown Id 2
                    td(title='') Unknown Name
                    td(title='') Unknown Dean
                    td.function(title='')
                        a(href="#")
                            i.fas.fa-trash-alt(id='')
                        a(href="#")
                            i.fas.fa-pencil-alt(id='')
                        a(href="#")
                            i.fas.fa-eye(id='')
                caption(title='CTU Majors') Table name: Cantho univerysity's major
        .paginator
            .total-item-page
                label(for='total-item-page') Total item per page:
                select#total-item-page(name='total-item-page')
                    option(value='10') 10
                    option(value='20') 20
                    option(value='25') 25
                    option(value='50') 50
                    option(value='100') 100
            i#previous.fas.fa-arrow-alt-circle-left.pagination
            .number
                input.page-index(type='button', value='1')
                input.page-index(type='button', value='2')
                input.page-index(type='button', value='3')
                input.page-index(type='button', value='4')
                input.page-index(type='button', value='5')
            i#next.fas.fa-arrow-alt-circle-right.pagination
            .total-item
                label(for='total-item') Total majors:
                input#total-item(type='button', value='')
