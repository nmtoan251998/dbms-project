extends ../layout/common

block main
    link(rel="stylesheet", href="/styles/create-forms.css")    
    link(rel="stylesheet", href="/styles/class.css")   
    form.form-create(method="post",action="/class/data-modify/"+data.id)
        fieldset
            legend New class information
            table.table-create
                tr
                    td
                        label(for="classid") Id: 
                    td
                        input(type="text" name="classid" id="classid" placeholder=data.id, value=data.id)
                tr
                    td
                        label(for="majorid") Major: 
                    td
                        input(type="text" name="majorid" id="majorid" placeholder=data.majorid, value=data.majorid)
                tr
                    td 
                        label(for="classname") Name: 
                    td
                        input(type="text" name="classname" id="classname" placeholder=data.classname, value=data.classname)
                tr
                    td 
                        label(for="headteacher") Headteacher: 
                    td
                        input(type="text" name="headteacher" id="headteacher" placeholder=data.headteacher, value=data.headteacher)
            button.btn.save-btn(type="submit") Save
            a.btn(href="/class/data") Back